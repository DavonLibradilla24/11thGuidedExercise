<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"
        android:text="Intent Guided Exercise"
        android:textSize="25sp" />


    <TextView
        android:id="@+id/tvNameGE11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name: "
        android:textSize="20sp"
        android:layout_below="@id/textViewTitle"
        android:layout_marginTop="32dp"
        android:layout_alignParentStart="true" />


    <TextView
        android:id="@+id/tvAgeGE11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Age: "
        android:textSize="20sp"
        android:layout_below="@id/tvNameGE11"
        android:layout_alignStart="@id/tvNameGE11"
        android:layout_marginTop="16dp" />


    <TextView
        android:id="@+id/tvGenderGE11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gender: "
        android:textSize="20sp"
        android:layout_below="@id/tvAgeGE11"
        android:layout_alignStart="@id/tvAgeGE11"
        android:layout_marginTop="16dp" />


    <TextView
        android:id="@+id/tvSubjectsGE11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subjects: "
        android:textSize="20sp"
        android:layout_below="@id/tvGenderGE11"
        android:layout_alignStart="@id/tvGenderGE11"
        android:layout_marginTop="16dp" />


    <TextView
        android:id="@+id/tvJobGE11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Job: "
        android:textSize="20sp"
        android:layout_below="@id/tvSubjectsGE11"
        android:layout_alignStart="@id/tvSubjectsGE11"
        android:layout_marginTop="16dp" />


    <TextView
        android:id="@+id/tvThesisGE11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thesis Topic: "
        android:textSize="20sp"
        android:layout_below="@id/tvJobGE11"
        android:layout_alignStart="@id/tvJobGE11"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btnEnterAgain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvThesisGE11"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="Enter Again" />

</RelativeLayout>
